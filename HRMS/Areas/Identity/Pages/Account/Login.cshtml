<!-- BEGIN LOGIN -->
<div class="content">
    <!-- BEGIN LOGIN FORM -->
    <form asp-route-returnurl="@ViewData["ReturnUrl"]" class="login-form" method="post">
        <h3 class="form-title">Login to your account</h3>
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
            <label asp-for="Input.Email" class="control-label visible-ie8 visible-ie9">Username</label>
            <div class="input-icon">
                <i class="fa fa-user"></i>
                <input asp-for="Input.Email" class="form-control placeholder-no-fix" placeholder="Email/MobileNumber" />
            </div>
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Input.Password" class="control-label visible-ie8 visible-ie9">Password</label>
            <div class="input-icon">
                <i class="fa fa-lock"></i>
                <input asp-for="Input.Password" class="form-control placeholder-no-fix" placeholder="Password" />
            </div>
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
        <div class="form-actions">
            <label class="checkbox">
                <input asp-for="Input.RememberMe" /> Remember me
            </label>
            <button type="submit" class="btn blue pull-right">
                Login <i class="m-icon-swapright m-icon-white"></i>
            </button>
        </div>

        <div class="forget-password">
            <h4>Forgot your password ?</h4>
            <p>
                no worries, click <a asp-page="./ForgotPassword"> here</a>
                to reset your password.
            </p>
        </div>
    </form>
    <!-- END LOGIN FORM -->
</div>
<!-- END LOGIN -->

