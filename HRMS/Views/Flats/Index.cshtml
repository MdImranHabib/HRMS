@model IEnumerable<HRMS.Models.Flat>

@{
    ViewData["Title"] = "Flat Index";
}

<h2>Flat List</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Add New</a>
</p>

<table class="table table-hover table-responsive">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>            
            <th>
                @Html.DisplayNameFor(model => model.MeterNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rent)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MeterNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rent)
            </td>
            @if (item.Status == true)
            {
                <td>
                    <span class="label label-danger">Allocated</span>
                </td>
            }
            else
            {
                <td>
                    <span class="label label-success">Free</span>
                </td>
            }
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-xs btn-warning">Edit</a>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-xs btn-info">Details</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-xs btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
