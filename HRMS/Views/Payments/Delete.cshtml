@model HRMS.Models.Payment

@{
    ViewData["Title"] = "Payment Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-content">
    <!-- BEGIN PAGE HEADER-->
    <h3 class="page-title">
        Delete Payment <small class="text-lowercase">Delete Payment</small>
    </h3>
    <div class="page-bar">
        <ul class="page-breadcrumb">
            <li>
                <i class="fa fa-home"></i>
                <a asp-action="Dashboard" asp-controller="Home">Home</a>
                <i class="fa fa-angle-right"></i>
            </li>
            <li>
                <a asp-action="Index" asp-controller="Payments">Payment List</a>
                <i class="fa fa-angle-right"></i>
            </li>
            <li>
                <a asp-action="Delete" asp-controller="Payments" asp-route-id="@Model.Id">Delete Payment</a>
            </li>
        </ul>
    </div>
    <!-- END PAGE HEADER-->
    <!-- BEGIN PAGE CONTENT-->
    <div class="row">
        <div class="col-md-12">
            <div class="portlet light">
                <h4 class="text-danger">Are you sure you want to delete this?</h4>
                <hr />
                <div>
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.Amount)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Amount)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.PaymentDate)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.PaymentDate)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.Method)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Method)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.Rent)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Rent.RentMonth)
                        </dd>
                    </dl>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="Delete" class="btn btn-danger" />
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
