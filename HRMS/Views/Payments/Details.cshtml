@model HRMS.Models.Payment

@{
    ViewData["Title"] = "Payment Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-content">
    <!-- BEGIN PAGE HEADER-->
    <h3 class="page-title">
        Payment Details <small class="text-lowercase">Payment Details</small>
    </h3>
    <div class="page-bar" style="border:1px solid orange">
        <ul class="page-breadcrumb">
            <li>
                <i class="fa fa-home"></i>
                <a asp-action="Dashboard" asp-controller="Home">Home</a>
                <i class="fa fa-angle-right"></i>
            </li>
            <li>
                <a asp-action="Index" asp-controller="Payments">Payment List</a>
                <i class="fa fa-angle-right"></i>
            </li>
            <li>
                <a asp-action="Details" asp-controller="Payments" asp-route-id="@Model.Id">Payment Details</a>
            </li>
        </ul>
    </div>
    <!-- END PAGE HEADER-->
    <!-- BEGIN PAGE CONTENT-->
    <div class="row">
        <div class="col-md-12">
            <div class="portlet light" style="border:1px solid green">
                <div>
                    <h4>Payment</h4>
                    <hr />
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.Amount)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Amount)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.PaymentDate)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.PaymentDate)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.Method)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Method)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.Rent)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Rent.RentMonth)
                        </dd>
                    </dl>
                </div>               
            </div>
        </div>
    </div>
</div>

