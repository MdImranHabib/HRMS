@model HRMS.Models.Rent

@{
    ViewData["Title"] = "Rent Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-content">
    <!-- BEGIN PAGE HEADER-->
    <h3 class="page-title">
        Rent Details <small class="text-lowercase">Rent Details</small>
    </h3>
    <div class="page-bar" style="border:1px solid orange">
        <ul class="page-breadcrumb">
            <li>
                <i class="fa fa-home"></i>
                <a asp-action="Dashboard" asp-controller="Home">Home</a>
                <i class="fa fa-angle-right"></i>
            </li>
            <li>
                <a asp-action="Index" asp-controller="Rents">Rent List</a>
                <i class="fa fa-angle-right"></i>
            </li>
            <li>
                <a asp-action="Details" asp-controller="Rents" asp-route-id="@Model.Id">Rent Details</a>
            </li>
        </ul>
    </div>
    <!-- END PAGE HEADER-->
    <!-- BEGIN PAGE CONTENT-->
    <div class="row">
        <div class="col-md-12">
            <div class="portlet light" style="border:1px solid green">
                <div>
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.RentMonth)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.RentMonth)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.Flat)
                        </dt>
                        <dd>
                            <em class="text-primary">Name: </em>@Model.Flat.Name; <em class="text-primary">Category: </em>@Model.Flat.Category; <em class="text-primary">Meter No: </em>@Model.Flat.MeterNo
                        </dd>
                        <dt>
                            Resident
                        </dt>
                        <dd>
                            <em class="text-primary">Name: </em>@ViewBag.ResidentInfo.Resident.Name; <em class="text-primary">Contact No: </em>@ViewBag.ResidentInfo.Resident.ContactNo
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.FlatRent)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.FlatRent)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.ElectricBill)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.ElectricBill)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.GasBill)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.GasBill)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.WaterBill)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.WaterBill)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.TotalBill)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.TotalBill)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.Paid)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Paid)
                        </dd>
                        <dt>
                            Due
                        </dt>
                        <dd>
                            @(Model.TotalBill - Model.Paid)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.Date)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Date)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.Remarks)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Remarks)
                        </dd>
                    </dl>
                </div>
                <div>
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
                    <a asp-action="Index" class="btn btn-primary">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>
