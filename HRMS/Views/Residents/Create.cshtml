@model HRMS.Models.ViewModels.ResidentViewModel

@{
    ViewData["Title"] = "Resident Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-content">
    <!-- BEGIN PAGE HEADER-->
    <h3 class="page-title">
        Add Resident <small class="text-lowercase"> Add Resident</small>
    </h3>
    <div class="page-bar">
        <ul class="page-breadcrumb">
            <li>
                <i class="fa fa-home"></i>
                <a asp-action="Dashboard" asp-controller="Home">Home</a>
                <i class="fa fa-angle-right"></i>
            </li>
            <li>
                <a asp-action="Create" asp-controller="Residents">Add Resident</a>
            </li>
        </ul>
    </div>
    <!-- END PAGE HEADER-->
    <!-- BEGIN PAGE CONTENT-->
    <div class="row">
        <div class="col-md-12">
            <div class="portlet light">
                <div class="row">
                    <div class="col-md-12">
                        <form enctype="multipart/form-data" asp-action="Create">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="Name" class="control-label"></label>
                                        <input asp-for="Name" class="form-control" />
                                        <span asp-validation-for="Name" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Email" class="control-label"></label>
                                        <input asp-for="Email" class="form-control" />
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="ContactNo" class="control-label"></label>
                                        <input asp-for="ContactNo" class="form-control" />
                                        <span asp-validation-for="ContactNo" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="NIDNo" class="control-label"></label>
                                        <input asp-for="NIDNo" class="form-control" />
                                        <span asp-validation-for="NIDNo" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="Photo" class="control-label"></label>
                                        <input asp-for="Photo" class="form-control" />
                                        <span asp-validation-for="Photo" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Occupation" class="control-label"></label>
                                        <input asp-for="Occupation" class="form-control" />
                                        <span asp-validation-for="Occupation" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="PrevAddress" class="control-label"></label>
                                        <textarea asp-for="PrevAddress" class="form-control"></textarea>
                                        <span asp-validation-for="PrevAddress" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="OpeningBalance" class="control-label"></label>
                                        <input asp-for="OpeningBalance" class="form-control" />
                                        <span asp-validation-for="OpeningBalance" class="text-danger"></span>
                                    </div>
                                </div>                                
                            </div>

                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <input type="submit" value="Save" class="btn btn-success" />
                                        <a asp-action="Index" class="btn btn-primary">Back to List</a>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
