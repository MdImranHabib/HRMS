@model HRMS.Models.Resident

@{
    ViewData["Title"] = "Resident Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

    var photoPath = "";

    if (Model.PhotoPath == "")
    {
        photoPath = "~/uploadedImages/Avatar.jpg";
    }
    else
    {
        photoPath = "~/uploadedImages/" + (Model.PhotoPath);
    }
}

<div class="page-content">
    <!-- BEGIN PAGE HEADER-->
    <h3 class="page-title">
        Delete Resident <small class="text-lowercase">Delete Resident</small>
    </h3>
    <div class="page-bar" style="border:1px solid orange">
        <ul class="page-breadcrumb">
            <li>
                <i class="fa fa-home"></i>
                <a asp-action="Dashboard" asp-controller="Home">Home</a>
                <i class="fa fa-angle-right"></i>
            </li>
            <li>
                <a asp-action="Index" asp-controller="Residents">Resident List</a>
                <i class="fa fa-angle-right"></i>
            </li>
            <li>
                <a asp-action="Delete" asp-controller="Residents" asp-route-id="@Model.Id">Delete Resident</a>
            </li>
        </ul>
    </div>
    <!-- END PAGE HEADER-->
    <!-- BEGIN PAGE CONTENT-->
    <div class="row">
        <div class="col-md-12">
            <div class="portlet light" style="border:1px solid green">
                <h4 class="text-danger">Are you sure you want to delete this?</h4>
                <hr />
                <div>
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.Name)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Name)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.Email)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Email)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.ContactNo)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.ContactNo)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.NIDNo)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.NIDNo)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.PhotoPath)
                        </dt>
                        <dd>
                            <img src="@photoPath" alt="Image Not Found" asp-append-version="true" style="height: 100px; width: 100px;" />
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.Occupation)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Occupation)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.PrevAddress)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.PrevAddress)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.OpeningBalance)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.OpeningBalance)
                        </dd>
                    </dl>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="Delete" class="btn btn-danger" />
                        <a asp-action="Index" class="btn btn-primary">Back to List</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


