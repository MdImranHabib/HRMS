@model HRMS.Models.Resident

@{
    ViewData["Title"] = "Resident Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-content">
    <!-- BEGIN PAGE HEADER-->
    <h3 class="page-title">
        Edit Resident <small class="text-lowercase"> Edit Resident</small>
    </h3>
    <div class="page-bar" style="border:1px solid orange">
        <ul class="page-breadcrumb">
            <li>
                <i class="fa fa-home"></i>
                <a asp-action="Dashboard" asp-controller="Home">Home</a>
                <i class="fa fa-angle-right"></i>
            </li>
            <li>
                <a asp-action="Index" asp-controller="Residents">Resident List</a>
                <i class="fa fa-angle-right"></i>
            </li>
            <li>
                <a asp-action="Edit" asp-controller="Residents" asp-route-id="@Model.Id">Edit Resident</a>
            </li>
        </ul>
    </div>
    <!-- END PAGE HEADER-->
    <!-- BEGIN PAGE CONTENT-->
    <div class="row">
        <div class="col-md-12">
            <div class="portlet light" style="border:1px solid green">
                <div class="row">
                    <div class="col-md-12">
                        <form asp-action="Edit">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="row">
                                <input type="hidden" asp-for="Id" />
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="Name" class="control-label"></label>
                                        <input asp-for="Name" class="form-control" />
                                        <span asp-validation-for="Name" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Email" class="control-label"></label>
                                        <input asp-for="Email" class="form-control" />
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="ContactNo" class="control-label"></label>
                                        <input asp-for="ContactNo" class="form-control" />
                                        <span asp-validation-for="ContactNo" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="NIDNo" class="control-label"></label>
                                        <input asp-for="NIDNo" class="form-control" />
                                        <span asp-validation-for="NIDNo" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="PhotoPath" class="control-label"></label>
                                        <input asp-for="PhotoPath" readonly class="form-control" />
                                        <span asp-validation-for="PhotoPath" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Occupation" class="control-label"></label>
                                        <input asp-for="Occupation" class="form-control" />
                                        <span asp-validation-for="Occupation" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="PrevAddress" class="control-label"></label>
                                        <textarea asp-for="PrevAddress" class="form-control"></textarea>
                                        <span asp-validation-for="PrevAddress" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="OpeningBalance" class="control-label"></label>
                                        <input asp-for="OpeningBalance" class="form-control" />
                                        <span asp-validation-for="OpeningBalance" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <input type="submit" value="Update" class="btn btn-warning" />
                                    <a asp-action="Index" class="btn btn-primary">Back to List</a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

